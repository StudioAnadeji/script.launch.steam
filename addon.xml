<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.launch.steam" name="Steam" version="1.0.0" provider-name="studioanadeji">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Linux Steam Launcher</summary>
		<description lang="en">Dead simple Steam launcher. Edit "addon.py" to change path and options if needed.</description>
		<license>GNU General Public License, v3</license>
		<language></language>
		<source>https://github.com/studioanadeji/script.launch.steam</source>
		<website></website>
		<email>github@anadeji.com</email>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
		</assets>
		<news>First release.</news>
	</extension>
</addon>
